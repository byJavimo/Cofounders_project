	<div class="container-fluid">
		<div class="row projects_index">
			<% @projects.each do |project| %>
		  <div class="col-sm-6 col-md-4">
		    <div class="project_index_box thumbnail">
		      <img src="<%=project.project_image%>">
		      <div class="caption">
		        <h3><%=project.project_name%></h3>
		       		<div>
						<p><%= project.project_name %></p>
						<p><%= project.project_position %></p>
						<p>
						<% if project.project_cofounder == true %>
								
								<%="#{project.project_name} is looking for a cofounder" %>
						<% end %>
						</p>
						<p>
						<% if project.project_employee == true %>

								<%= "#{project.project_name} is looking for a worker" %>

						<% end %>
						</p>
					</div class="btn btn-info btn-lg btn-block">
		        <p><a href="<%=project_path(project.id)%>"  role="button">More info</a>
		        </p>
		      </div>
		    </div>
		  </div>
		  <%end%>
		</div>
	</div>

