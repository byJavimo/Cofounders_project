<div class="container-fluid">
	<div class="row user_index">
		<% @users.each do |user| %>
	  <div class="col-sm-6 col-md-4">
	  	<div class="user_index_box thumbnail">
	      <img class="user_image_index"src="<%=user.image%>">
	      <div class="caption">
	        <h3><%=user.name%> <%=user.last_name%></h3>
	       		<div>
					<p><%= user.education %></p>
					<p><%= user.position %></p>
					<% if user.cofounder == true %>	
							<%="#{user.name} is looking for opportunities in new projects" %>
					<% end %>
					</p>
					<p>
					<% if user.employee == true %>
							<%="#{user.name} is looking for a job" %>
					<% end %>
					</p>
				</div>
	      	</div>
	     <div class="btn-info"><a href="<%=user_path(user.id)%>">More info</a></div>
	    </div>
	  </div>
	  <%end%>
	</div>
</div>




