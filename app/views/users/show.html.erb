<% if current_user.user_email == @user.user_email %>


<div class="container-fluid">
    <div class="fb-profile">
        <img align="left" class="fb-image-lg" src="http://lorempixel.com/850/280/nightlife/5/"/>
        <img align="left" class="fb-image-profile thumbnail circular" src="<%=@user.user_image%>"/>
        <div class="fb-profile-text">
            <h1><%=@user.user_name%> <%= @user.user_last_name %></h1>
            <h2><%=@user.user_position%></h2>
            <div>
        	    <p>Education: <%= @user.user_education%></p>
                    <%@user_skills_array.each do |skill|%>

                <ul>

                     <button><%=skill%></button>

                </ul>

                <%end%>
            </div>
        </div>
        <div>
        	<button><%= link_to('Edit profile', edit_user_path(@user.id))%></button>
			<button><%= link_to('Create project', new_project_path )%></button>
			<button> DELETE PROFILE </button>
			<button><%= link_to('My projects', user_projects_path(@user.id))%></button>
        </div>
        <h3> Projects that can interest you... </h3>

			<div>
				<% if @projects_found %>
					<% @user.projects.each do |project| %>
                        <%=project.project_name %>
                        
					<% end %>
				<% else%>
					<p> Sorry, there is no project that match with your interest or skills. You can look more projects here</p>
				<% end %>
			</div>
        <div>
        </div>
    </div>
</div> <!-- /container -->  
		
<% else %>

<div class="container-fluid">
    <div class="fb-profile">
        <img align="left" class="fb-image-lg" src="http://lorempixel.com/850/280/nightlife/5/" alt="Profile image example"/>
        <img align="left" class="fb-image-profile thumbnail circular" src="<%=@user.user_image%>" alt="Profile image example"/>
        <div class="fb-profile-text">
            <h1><%=@user.user_name%></h1>
            <h2><%= @user.user_last_name %></h2>
            <p><%= @user.user_position %></p>
        	<p><%= @user.user_education%></p>
        </div>
    </div>
</div> <!-- /container -->  

<% end %>






